@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DoAnWebNangCao.Pages.Blogs.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Content" class="control-label"></label>
                <textarea asp-for="Blog.Content" class="form-control"></textarea>
                <span asp-validation-for="Blog.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Link" class="control-label"></label>
                <input asp-for="Blog.Link" class="form-control" />
                <span asp-validation-for="Blog.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.ImagePath" class="control-label"></label>
                <input type="file" asp-for="Blog.ImagePath" class="form-control" />
                <span asp-validation-for="Blog.ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

