<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Do An Web</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>

<body>
    <div class="sidebar">
        <div class="logo"></div>
        <ul class="menu">
            <li class="active">
                <a asp-area="" asp-controller="DashBoard" asp-action="RevenueReport">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-controller="Discount" asp-action="Index">
                    <i class="fas fa-user"></i>
                    <span>Discount</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Author" asp-action="Index">
                    <i class="fas fa-chart-bar"></i>
                    <span>Author</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Book" asp-action="Index">
                    <i class="fas fa-briefcase"></i>
                    <span>Book</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Genre" asp-action="GenreList">
                    <i class="fas fa-question-circle"></i>
                    <span>Genre</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Publisher" asp-action="Index">
                    <i class="fas fa-star"></i>
                    <span>Publisher</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="StockInputs" asp-action="Index">
                    <i class="fas fa-cog"></i>
                    <span>Stock Input</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Order" asp-action="AdminOrder">
                    <i class="fas fa-cog"></i>
                    <span>Orders</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Coupon" asp-action="Index">
                    <i class="fas fa-cog"></i>
                    <span>Coupon</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="OrdersStatus" asp-action="Index">
                    <i class="fas fa-cog"></i>
                    <span>Orders Status</span>
                </a>
            </li>
            <li class="logout">
                <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="main-content">
        <div class="header-wrapper">
            <div class="header-title">
                <span>Primary</span>
                <h2>Dashboard</h2>
            </div>
            <partial name="_LoginPartial.cshtml" />
        </div>
        <div class="card-container">
           @RenderBody()
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>
